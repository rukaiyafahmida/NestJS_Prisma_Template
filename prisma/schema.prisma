generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  email     String   @unique
  hash      String
  Entry     Entry[]

  @@map("users")
}

model Category {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  type  String
  Entry Entry[]

  @@map("categories")
}

model Entry {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type        String
  amount      Float
  description String?

  categoryId Int
  userId     Int

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id])

  @@map("entries")
}
